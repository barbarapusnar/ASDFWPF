<Window x:Class="ASDFWPF.PoSkupinah"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ASDFWPF"
        mc:Ignorable="d"
        Height="450" Width="800" WindowState="Maximized" 
                  WindowStartupLocation="CenterScreen" WindowStyle="None" >

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!--<Button FontFamily="Segoe MDL2 Assets" Content="&#xE72B;" Margin="35,35,35,50"/>-->
            <TextBlock Text="Vse skupine" Grid.Column="1" FontSize="24" FontWeight="Bold" />
            <TextBlock Grid.Column="1" HorizontalAlignment="Right" FontSize="16" Text="{Binding Uporabnik}"/>
            <Button Grid.Column="2" Content="X" Width="30" Height="30" Click="Button_Click"/>
        </Grid>
        <Frame Grid.Row="1"  Name="mojOkvir"/>
    </Grid>  
   
</Window>
